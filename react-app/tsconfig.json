{
  "compilerOptions": {
    "lib": ["es2020", "dom"],
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": true,
    "noImplicitThis": true,
    "composite": true,
    "emitDeclarationOnly": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "incremental": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "checkJs": true,
    "target": "ESNext",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "NodeNext",
    "types": ["vite/client", "vitest"]
  },
  "files": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.spec.json"
    }
  ],
  "extends": "../tsconfig.base.json"
}
